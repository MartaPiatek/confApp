<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.martapiatek.confapp.ConferenceActivity"
    android:background="@color/colorBackground"
    tools:showIn="@layout/activity_conference">


    <ImageView
        android:id="@+id/imageViewConference"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        app:layout_constraintBottom_toTopOf="@+id/txtViewAboutConference"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/codeeurope"/>

    <TextView
        android:id="@+id/txtViewAboutConference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:text="@string/aboutConference"
        android:textColor="@color/colorFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConference"/>


</android.support.constraint.ConstraintLayout>