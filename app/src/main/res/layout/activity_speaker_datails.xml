<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.martapiatek.confapp.SpeakerDatailsActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/txtViewSpeakerName"
            android:background="@color/colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nazwisko"
            android:textColor="@color/colorFont"
            android:textSize="36sp"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:background="@color/colorBackground"
            android:id="@+id/txtViewSpeakerCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Firma"
            android:textColor="@color/colorFont"
            android:textSize="24sp"/>
    </TableRow>

    <TableRow
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:background="@color/colorBackground"
            android:id="@+id/txtViewSpeakerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Opis"
            android:textColor="@color/colorFont"
            android:textSize="24sp"/>
    </TableRow>

    <ListView
        android:id="@+id/events_list_view"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_weight="0.31"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:listitem="@layout/events_rows"/>

</LinearLayout>
