<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="5dip" >


    <TextView
        android:id="@+id/row_notesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Title"

        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"/>


    <TextView
        android:id="@+id/row_notesContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_notesTitle"
        android:layout_marginTop="1dip"

        android:layout_toRightOf="@+id/thumbnail"
        android:text="Text"
        android:textColor="#343434"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/row_notesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/row_notesTitle"
        android:layout_marginRight="25dip"
        android:gravity="right"

        android:textColor="#10bcc9"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="11-11-2017"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_right_black"/>

</RelativeLayout>